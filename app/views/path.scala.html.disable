@(path: com.faacets.data.Main.Path)(content: Html)
@import com.faacets.data.Main.Path
@main(path.toString) {
<ul class="breadcrumb">
  @for(elements <- path.elements.tails.toList.reverse) {
  <li><a href="@(Application.pathToUrl(com.faacets.data.Main.Path(elements)))">@(if
  (elements.isEmpty) "root" else elements.head)</a></li>
  }
</ul>

@content
}
